<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="Practice.AuthWindow"
        Title="Авторизация">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox Name="LoginTxt" Width="150" Text="Login" HorizontalContentAlignment="Center"/>
        <TextBox Name="PassTxt" Width="150" Text="Password" HorizontalContentAlignment="Center" Margin="0 10 0 0"/>
        <Button Name="AuthBtn" Width="150" Content="Войти" Background="Lavender" HorizontalContentAlignment="Center" Margin="0 10 0 0" Click="AuthBtn_OnClick"/>
        <TextBlock Name="RegistrationTxt" Tapped="RegistrationTxt_OnTapped" HorizontalAlignment="Center" Text="Регистрация" FontSize="12" FontWeight="Light"/>
    </StackPanel>
</Window>
