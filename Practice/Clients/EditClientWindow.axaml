<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="Practice.EditClientWindow"
        Title="Редактирование клиента">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Фамилия" HorizontalAlignment="Center"/>
        <TextBox Name="EditSurnameTxt" Width="150"/>
        <TextBlock Text="Имя" HorizontalAlignment="Center"/>
        <TextBox Name="EditFirstnameTxt"/>
        <TextBlock Text="Номер телефона" HorizontalAlignment="Center"/>
        <TextBox Name="EditPhoneTxt"/>
        <TextBlock Text="Почта" HorizontalAlignment="Center"/>
        <TextBox Name="EditEmailtxt"/>
        <Button Name="EditBtn" Width="150" Content="Сохранить" HorizontalContentAlignment="Center" Background="Lavender" Margin="0 10 0 0" Click="EditBtn_OnClick"></Button>
    </StackPanel>
</Window>
