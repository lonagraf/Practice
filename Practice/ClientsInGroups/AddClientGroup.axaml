<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="Practice.Groups.AddClientGroup"
        Title="Добавление клиентов в группу">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Клиент" HorizontalAlignment="Center"/>
        <ComboBox Name="ClientCmb" Width="150"></ComboBox>
        <TextBlock Text="Группа" HorizontalAlignment="Center"/>
        <ComboBox Name="GroupCmb" Width="150"></ComboBox>
        <Button Name="AddBtn" Content="Добавить" Click="AddBtn_OnClick" HorizontalAlignment="Center" Margin="0 5 0 0 " Background="Lavender" HorizontalContentAlignment="Center"></Button>
    </StackPanel>
</Window>
