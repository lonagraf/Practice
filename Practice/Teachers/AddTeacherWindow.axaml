<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="Practice.Teachers.AddTeacherWindow"
        Title="Добавление учителя">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Фамилия" HorizontalAlignment="Center"/>
        <TextBox Name="SurnameTxt" Width="150"></TextBox>
        <TextBlock  Text="Имя" HorizontalAlignment="Center"/>
        <TextBox Name="NameTxt" Width="150"></TextBox>
        <TextBlock Text="Дата рождения" HorizontalAlignment="Center"/>
        <CalendarDatePicker Name="BirthdayPicker" Width="150"></CalendarDatePicker>
        <TextBlock Text="Телефон" HorizontalAlignment="Center"/>
        <TextBox Name="PhoneTxt" Width="150"></TextBox>
        <TextBlock Text="Почта" HorizontalAlignment="Center"/>
        <TextBox Name="EmailTxt" Width="150"></TextBox>
        <Button Name="AddTeacherBtn" Width="150" Content="Добавить" HorizontalContentAlignment="Center" Margin="0 10 0 0" Background="Lavender" Click="AddTeacherBtn_OnClick"></Button>
    </StackPanel>
</Window>
